<form action='/api/carts/{{idCart}}' method='get'>
  <button type='submit'>Ver Carrito - {{cantCart}}</button>
</form>

{{#if products.length}}
  <h2 align='center'>Lista de productos</h2>
  <table class='table' id='table' cellPadding='10' border='1' align='center'>
    <thead>
      <tr>
        <th>#id</th>
        <th>Producto</th>
        <th>Consola</th>
        <th>Precio</th>
        <th>Stock disponible</th>
        <th></th>
      </tr>
    </thead>
    <tbody id='productsTable'>
      {{#each products}}
        <tr>
          <td>{{id}}</td>
          <td>{{title}}</td>
          <td>{{plataform}}</td>
          <td>${{price}}</td>
          <td>{{stock}}</td>
          <td>
            <form action='/api/carts/64dd0734c3b03ed06f97a2a1/product/{{id}}' method='post'>
                <button type='submit'>Agregar al carrito</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <td colspan='5' align='center'>
          {{#if hasPrevPage}}
            <a href='/views/products?page={{prevPage}}'>Prev</a>
          {{/if}}
          {{#if hasNextPage}}
            <a href='/views/products?page={{nextPage}}'>Next</a>
          {{/if}}
        </td>
      </tr>
    </tfoot>
  </table>
{{else}}
  <h2>No se han encontrado productos</h2>
{{/if}}

<script src='/socket.io/socket.io.js'></script>
<script src='/js/index.js'></script>